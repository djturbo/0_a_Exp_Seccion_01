<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/imageButtonPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextPhone"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/editTextPhone"
            android:background="@android:color/transparent"
            app:srcCompat="@android:drawable/ic_menu_call" />

        <EditText
            android:id="@+id/editTextWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextPhone"
            android:layout_marginStart="13dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/imageButtonWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextWeb"
            android:layout_alignStart="@+id/imageButtonPhone"
            app:srcCompat="@android:drawable/ic_menu_view" />

        <Button
            android:id="@+id/btnShowContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextWeb"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:text="Contacts" />

        <EditText
            android:id="@+id/editTextMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editTextWeb"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/imageButtonMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextMail"
            android:layout_alignEnd="@+id/imageButtonWeb"
            android:background="@android:color/transparent"
            app:srcCompat="@android:drawable/sym_action_email" />

        <Button
            android:id="@+id/btnPhoneCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextMail"
            android:layout_centerHorizontal="true"
            android:text="Call" />
    </RelativeLayout>


    <ImageButton
        android:id="@+id/imageButtonCamera"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="#E91E63"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
